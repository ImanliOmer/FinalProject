@using Business.ViewModels.Admin.NavigationCardVM
@model NavigationCardUpdateVM
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update NavCard</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="Update" asp-controller="navigationcard" method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title">
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BtnLink"></label>
                    <input class="form-control" asp-for="BtnLink">
                    <span asp-validation-for="BtnLink"></span>
                </div>



                <div class="form-group">
                    <label class="form-label" asp-for="Image"></label></br>
                    <input type="file" class="form-label" asp-for="Image">
                    <span asp-validation-for="Image"></span>
                </div>


                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

</div>