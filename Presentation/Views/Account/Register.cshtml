<div class="max-w-full xl:max-w-[1800px] mx-auto flex flex-col justify-center items-center">
    <div class="w-full">
        <div class="px-[var(--col-mobile)] lg:px-[var(--col)] pt-[48px] pb-[64px] md:py-[108px]">
            <div class="flex justify-center flex-col md:flex-row">
                <div class="md:pr-[72px] md:max-w-[504px] md:w-[504px] pb-[48px] md:pb-0">
                    <div>
                        <form>
                            <div>
                                <h2 class="text-3xl  text-black font-bold">
                                    Create your account
                                </h2>
                            </div>
                            <div class="mt-5 lg:mt-6">
                                <p class="text-black font-sans leading-5 lg:leading-7">
                                    <div>
                                        <div>
                                            <p class="font-sans">
                                                Create your own Polaroid account today. It makes
                                                shopping smoother and faster, while also earning you reward points on
                                                every purchase.
                                            </p>
                                        </div>
                                    </div>
                                </p>
                            </div>
                            <div class="pt-5 lg:pt-4">
                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label class="text-storm font-sans"
                                               for="register-first-name">First name</label>
                                    </div>
                                    <div class="mt-2">
                                        <input id="register-first-name"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="First name" type="text" name="firstName" value="">
                                    </div>
                                </div>
                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label class=" text-storm font-sans"
                                               for="register-last-name">Last name</label>
                                    </div>
                                    <div class="mt-2">
                                        <input id="register-last-name"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="Last name" type="text" name="lastName" value="">
                                    </div>
                                </div>
                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label class=" text-storm font-sans"
                                               for="register-email">Email</label>
                                    </div>
                                    <div class="mt-2">
                                        <input id="register-email"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="Email" type="text" name="email" value="">
                                    </div>
                                </div>
                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label class=" text-storm font-sans"
                                               for="register-password">Password</label>
                                    </div>
                                    <div class="mt-2">
                                        <input id="register-password"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="Password" type="password" name="password" value="">
                                    </div>
                                </div>
                                <div class="flex items-center pt-7 lg:pt-5">
                                    <button type="button" role="checkbox"
                                            style="transform: translateX(-100%); position: absolute; pointer-events: none; opacity: 0; margin: 0px; width: 24px; height: 24px;">
                                        <p class="text-black font-sans ml-[11px] cursor-pointer leading-[14px]">
                                            <div>
                                                <div>
                                                    <p class="font-sans">
                                                        I have read and agree to the <a href="" class="underline">
                                                            <span style="text-decoration: underline;">
                                                                Privacy
                                                                Policy
                                                            </span>
                                                        </a> and <span style="text-decoration: underline;">
                                                            <a href="" class="underline">
                                                                Loyalty
                                                                Terms &amp; Conditions
                                                            </a>.
                                                        </span>
                                                    </p>
                                                </div>
                                            </div>
                                        </p>
                                </div>
                                <div class="pt-7 flex">
                                    <button type="submit"
                                            class="font-bold rounded-[100px]  bg-black text-white py-4 px-7 border-2 border-solid border-black/50 w-full">
                                        Create
                                        account
                                    </button>
                                </div>
                                <div class="flex justify-center pt-7">
                                    <a href=""
                                       class="text-black font-bold animated-underline animated-underline-black pb-[2px]">
                                        Return
                                        to login
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="h-[2px] w-auto md:w-[2px] md:h-auto bg-slate-300"></div>


                <div class="md:max-w-[504px] md:w-[504px] md:pl-[72px] pt-[48px] md:pt-0">
                    <div>
                        <h2 class="text-3xl text-black font-bold">Already have an account?</h2>
                    </div>
                    <div class="mt-5 md:mt-6">
                        <p class="text-black font-sans leading-5 md:leading-7">
                            <div>
                                <div>
                                    <p class="font-sans">Access it now to save time when you shop.</p>
                                </div>
                            </div>
                        </p>
                    </div>
                    <div class="mt-9">
                        <a href="/account/login"
                           class="inline-flex items-center bg-white text-black border-2 border-black border-solid font-sans rounded-full text-center h-[48px] px-7 w-full md:w-auto transition-[all] duration-300 ease-out hover:bg-black hover:text-white">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
