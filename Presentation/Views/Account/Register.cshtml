@using Business.ViewModels.User.Account
@model AccountRegisterVM

<div class="max-w-full xl:max-w-[1800px] mx-auto flex flex-col justify-center items-center">
    <div class="w-full">
        <div class="px-[var(--col-mobile)] lg:px-[var(--col)] pt-[48px] pb-[64px] md:py-[108px]">
            <div class="flex justify-center flex-col md:flex-row">
                <div class="md:pr-[72px] md:max-w-[504px] md:w-[504px] pb-[48px] md:pb-0">
                    <div>
                        <form asp-action="register" asp-controller="account" method="post">
                            <div>
                                <h2 class="text-3xl  text-black font-bold">
                                    Create your account
                                </h2>
                            </div>
                            <div class="mt-5 lg:mt-6">
                                <p class="text-black font-sans leading-5 lg:leading-7">
                                    <div>
                                        <div>
                                            <p class="font-sans">
                                                Create your own Polaroid account today. It makes
                                                shopping smoother and faster, while also earning you reward points on
                                                every purchase.
                                            </p>
                                        </div>
                                    </div>
                                </p>
                            </div>


                            <div class="pt-5 lg:pt-4">


                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label asp-for="Username" class="text-storm font-sans"
                                               >Username</label>
                                    </div>
                                    <div class="mt-2">
                                        <input asp-for="Username" id="register-first-name"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="Username" type="text" name="Username" value="">
                                        <span asp-validation-for="@Model.Username"></span>
                                    </div>
                                </div>
                                
                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label asp-for="Email" class=" text-storm font-sans"
                                               >Email</label>
                                    </div>
                                    <div class="mt-2">
                                        <input asp-for="Email" id="register-email"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="Email" type="text" name="email" value="">
                                        <span asp-validation-for="@Model.Email"></span>
                                    </div>
                                </div>

                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label asp-for="PhoneNumber" class=" text-storm font-sans">PhoneNumber</label>
                                    </div>
                                    <div class="mt-2">
                                        <input asp-for="PhoneNumber" id="register-PhoneNumber"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="PhoneNumber" type="text" name="PhoneNumber" value="">
                                        <span asp-validation-for="@Model.PhoneNumber"></span>
                                    </div>
                                </div>
                               

                                <div class="mt-4 lg:mt-5">
                                    <div class="pl-4">
                                        <label asp-for="Password" class=" text-storm font-sans"
                                               >Password</label>
                                    </div>
                                    <div class="mt-2">
                                        <input asp-for="Password" id="register-password"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="Password" type="password" name="password" value="">
                                        <span asp-validation-for="@Model.Password"></span>
                                    </div>
                                </div>

                                <div class="mt-4 lg:mt-5">
                                    <div  class="pl-4">
                                        <label asp-for="ConfirmPassword" class=" text-storm font-sans"
                                               >ConfirmPassword</label>
                                    </div>
                                    <div class="mt-2">
                                        <input asp-for="ConfirmPassword" id="register-password"
                                               class="rounded-full border-neutral border-2 w-full h-[48px] px-7 text-black font-sans leading-4 placeholder:text-dovegray"
                                               placeholder="ConfirmPassword" type="password" name="ConfirmPassword" value="">

                                        <span asp-validation-for="@Model.ConfirmPassword"></span>
                                    </div>
                                   
                                </div>

                             

                                <div class="pt-7 flex">
                                    <button asp-action="register" asp-controller="account" type="submit"
                                            class="font-bold rounded-[100px]  bg-black text-white py-4 px-7 border-2 border-solid border-black/50 w-full">
                                        Create
                                        account
                                    </button>
                                </div>

                                <div class="flex justify-center pt-7">
                                    <a href=""
                                       class="text-black font-bold animated-underline animated-underline-black pb-[2px]">
                                        Return
                                        to login
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="h-[2px] w-auto md:w-[2px] md:h-auto bg-slate-300"></div>


                <div class="md:max-w-[504px] md:w-[504px] md:pl-[72px] pt-[48px] md:pt-0">
                    <div>
                        <h2 class="text-3xl text-black font-bold">Already have an account?</h2>
                    </div>
                    <div class="mt-5 md:mt-6">
                        <p class="text-black font-sans leading-5 md:leading-7">
                            <div>
                                <div>
                                    <p class="font-sans">Access it now to save time when you shop.</p>
                                </div>
                            </div>
                        </p>
                    </div>
                    <div class="mt-9">
                        <a href="/account/login"
                           class="inline-flex items-center bg-white text-black border-2 border-black border-solid font-sans rounded-full text-center h-[48px] px-7 w-full md:w-auto transition-[all] duration-300 ease-out hover:bg-black hover:text-white">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
